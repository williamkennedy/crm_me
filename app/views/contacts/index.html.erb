<p style="color: green"><%= notice %></p>

<div class="mt-8 px-4 flex items-center justify-between">
  <div class="min-w-0 flex-1">
    <h1 class='h1'>Contacts</h1>
  </div>
  <div class='mt-4 flex ml-4 mt-0'>
    <%= link_to '/hello_world', class: 'btn btn-primary' do %>
      <%= heroicon 'phone', options: {class: 'w-5 h-5'} %>
    <% end %>
    <%= link_to new_contact_path, class: 'ml-2 btn btn-primary' do %>
      <%= heroicon 'plus', options: {class: 'w-5 h-5'} %>
    <% end %>
    <%= link_to import_contacts_path, class: 'ml-2 btn btn-primary' do %>
      <%= heroicon 'arrow-down-on-square', options: {class: 'w-5 h-5'} %>
    <% end %>
  </div>
</div>

<div class='overflow-hidden rounded-md bg-white shadow mt-4'>

  <ul class='divide-y divide-gray-200' id="contacts">
    <% @contacts.each do |contact| %>
      <%= render contact %>
    <% end %>
  </ul>
</div>

